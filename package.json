{
	"name": "cicd-app",
	"version": "1.0.0",
	"description": "Node.js app for CI/CD with GitHub Actions",
	"main": "app.js",
	"scripts": {
		"start": "node server.js",
		"test": "jest --detectOpenHandles"
	},
	"jest": {
		"testEnvironment": "node",
		"collectCoverage": true,
		"coverageThreshold": {
			"global": {
				"branches": 50,
				"functions": 50,
				"lines": 50,
				"statements": 50
			}
		},
		"coverageDirectory": "./coverage"
	},
	"dependencies": {
		"express": "^4.18.1"
	},
	"devDependencies": {
		"jest": "^28.1.3",
		"supertest": "^6.2.3"
	},
	"type": "module"
}
